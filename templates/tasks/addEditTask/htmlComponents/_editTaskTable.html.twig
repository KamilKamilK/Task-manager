<div class="header-wrapper">
    <h2>Task list</h2>
</div>
<div class='table-responsive'>
    <table id='task-list' class='table table-striped table-bordered'>
        <tr>
            <th>Title</th>
            <th>Details</th>
            <th>Tools [quantity]</th>
            <th>Deadline</th>
            <th>Completed</th>
        </tr>

        {% for task in tasks %}
            <tr>
                <td data-id="{{ task.id }}" class="edit title">{{ task.title }}</td>
                <td data-id="{{ task.id }}" class="edit detail">{{ task.details }}</td>
                <td style="width: 10%">
                    {% for tool in task.tools %}
                        {{ tool.name }}  [{{ tool.quantity }}]
                    {% endfor %}
                </td>
                <td data-id="{{ task.id }}" class="edit deadline">{{ task.deadline|date('d.m.Y') }}</td>
                <td data-id="{{ task.id }}"
                    class="complete {{ task.completed ? 'green-completed' : 'red-completed' }}">{{ task.completed > 0 ? '<i class="fas fa-check"></i>' : '<i class="fas fa-times"></i>' }}</td>
            </tr>
        {% endfor %}
    </table>
    <script src="{{ asset('js/tasks_rest.js') }}"></script>
</div>