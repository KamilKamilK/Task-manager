<div class="header-wrapper">
    <h2>Task list</h2>
    <a href="{{ path('app_add_task') }}" class="btn btn-primary button-loading">Add/edit tasks</a>
</div>
<div class='table-responsive'>
    <table id='task-list' class='table table-striped table-bordered'>
        <tr>
            <th>Title</th>
            <th>Details</th>
            <th>Deadline</th>
            <th>Completed</th>
        </tr>

        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td data-id="{{ task.id }}" class="td-detail">{{ task.details }}</td>
                <td>{{ task.deadline|date('d.m.Y') }}</td>
                <td data-id="{{ task.id }}"
                    class="{{ task.completed ? 'green-completed' : 'red-completed' }}">
                    {{ task.completed > 0 ? '<i class="fas fa-check"></i>' : '<i class="fas fa-times"></i>' }}</td>
            </tr>
        {% endfor %}
    </table>
</div>